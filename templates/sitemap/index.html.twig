<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

{% for uri in urls %}
    <url>
        <loc>{{ hostname }}{{ uri.loc }}</loc>
        
        {% if uri.lastmod is defined %}
            <lastmod>{{ uri.lastmod }}</lastmod>
        {% endif %}
    </url>
{% endfor %}
</urlset>