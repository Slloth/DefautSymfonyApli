{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
<div class="container-fluid pt-5 pb-5">
    <div class="row">
        <div class="col-xl-2 p-5">
            {% include "article/__navbarSearch.html.twig" %}
        </div>
        <div class="col-md-9">
            {% if articles is not empty %}
                <div class="grid-articles">
                    {% for article in articles %}
                        {% include "article/__card.html.twig" with {article:article} only %}
                    {% endfor %}
                </div>
            {% else %}
                <div>
                    <p class="text-center">Désolé, mais votre recherche, ne correspond à aucun enregistrement dans notre base de données !</p>
                </div>
            {% endif %}
            <div class="text-light navigation mt-5 d-flex justify-content-end">
                {{ knp_pagination_render(articles,'base/pagination.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}